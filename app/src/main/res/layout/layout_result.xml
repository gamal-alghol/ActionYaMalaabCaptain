<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_primary_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_15">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_status"
        android:layout_width="@dimen/img_size_medium"
        android:layout_height="@dimen/img_size_medium"
        android:layout_margin="@dimen/margin_5"
        android:contentDescription="@string/content_description"
        android:padding="@dimen/padding_5"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/txt_status"
        style="@style/SemiBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_title" />


    <Button
        android:id="@+id/result_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/btn_rounded_standard"
        android:paddingEnd="@dimen/padding_25"
        android:paddingStart="@dimen/padding_25"
        android:text="رجوع"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_title" />

</LinearLayout>